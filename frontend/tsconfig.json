{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "target": "es5",
    "module": "esnext",
    "lib": [
      "esnext",
      "webworker",
      "dom",
      "dom.iterable"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "buildOptions": {
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
